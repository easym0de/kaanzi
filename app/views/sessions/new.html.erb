<div id="user-login">
	
<header>
	<div class="header-left">
		<h1>User Login</h1>
	</div>
	<div class="header-right">
		<h3>Need an account? <%= link_to "Sign up!", signup_path %></h3>
	</div>
</header>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :login, "Username or Email Address",:class=>'login-label' %><br />
    <%= text_field_tag :login, params[:login], :required=>'true' %>
  </p>
  <p>
    <%= label_tag :password, "Password",:class=>'login-label' %><br />
    <%= password_field_tag :password %>
  </p>
  <p><%= submit_tag "Log in" %></p>
<% end %>
</div>